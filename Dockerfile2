# Use an official Python runtime as the base image
FROM continuumio/miniconda3:latest

# Set the working directory in the container
WORKDIR .

# Copy the requirements.txt and environment.yml files into the container at /LoGG3D-Net
COPY requirements.txt .
COPY environment.yml .

# Install pip
RUN apt-get update && \
    apt-get install -y python3-pip && \
    pip3 install --upgrade pip

# Install PyTorch version 1.8.0
RUN pip install torch==2.2.0 torchvision==0.17.0 torchaudio==2.2.0 --index-url https://download.pytorch.org/whl/rocm5.6

# Install torchsparse
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    && apt-get install -y libsparsehash-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*
RUN pip install --upgrade git+https://github.com/mit-han-lab/torchsparse.git@v1.4.0

# Create the Conda environment
RUN conda env create -f environment.yml

# Activate the Conda environment
SHELL ["/bin/bash", "-c"]
RUN echo "source activate logg3d_env" > ~/.bashrc
ENV PATH /opt/conda/envs/logg3d_env/bin:$PATH

# Install mpi4py and openmpi
#RUN conda install -y mpi4py openmpi

# Set the number of GPUs
ENV _NGPU=1

# Copy the code into the container at /LoGG3D-Net
COPY . .

# Run LOGG3D-Net training
CMD ["./run_script.sh"]